<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//FR"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 <hibernate-mapping>
	 <class name="bean.User" table="users">
	 	<id name="id" column="id">
	 		<generator class="increment"></generator>
	 	</id>
	 	<property name="username" column="username"></property>
	 	<property name="password" column="password"></property>
	 	<property name="password_token" column="password_token"></property>
	 	<property name="name" column="name"></property>
	 	<property name="lastname" column="lastname"></property>
	 	<property name="birth" column="birth"></property>
	 	<property name="email" column="email"></property>
	 	<property name="phone" column="phone"></property>
	 	<property name="email_token" column="email_token"></property>
	 	<property name="city" column="city"></property>
	 	<property name="gender" column="gender"></property>
	 	<property name="avatar" column="avatar"></property>
	 	<property name="active" column="active"></property>
	 	<property name="created" column="created"></property>
	 	<property name="modified" column="modified"></property>
	 </class>
 </hibernate-mapping>