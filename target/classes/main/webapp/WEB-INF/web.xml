<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Xidmatv</display-name>
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>controllers.HomeController</servlet-class>
    <init-param>
      <param-name>param0</param-name>
      <param-value>*</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/accueil</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>*.php</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>User</servlet-name>
    <servlet-class>controllers.Usercontroller</servlet-class>
    <init-param>
      <param-name>param</param-name>
      <param-value>*</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>User</servlet-name>
    <url-pattern>/membre</url-pattern>
  </servlet-mapping>
  <servlet>
	<servlet-name>Contact</servlet-name>
	<servlet-class>controllers.ContactController</servlet-class>  
  </servlet>
  <servlet-mapping>
  	<servlet-name>Contact</servlet-name>
  	<url-pattern>/contact</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <description>Config. de l'encodage des pages JSP</description>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
  
</web-app>